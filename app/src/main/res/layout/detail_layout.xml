<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/ic_markerpy"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deNama"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Parkir Umum A"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:divider="@color/colorPrimary">

        <TextView
            android:id="@+id/deAlamat"
            android:text="jalan meruya Selatan no.50 meruya selatan, Kembangan, 11650"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/deKota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jakarta barat"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ketersediaan parkir"
            android:textStyle="bold"
            android:textSize="16dp"
            android:gravity="center_horizontal" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:stretchColumns="3"
            android:background="@color/colorPrimary">
            <TableRow>
                <TextView
                    android:text="Mobil"
                    android:textColor="@color/colorPrimaryText"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:padding="8dip" />
                <TextView
                    android:text="Motor"
                    android:textColor="@color/colorPrimaryText"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:padding="8dip" />
                <TextView
                    android:text="Total"
                    android:textColor="@color/colorPrimaryText"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:padding="8dip" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/deMobil"
                    android:background="@color/colorPrimaryText"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:padding="8dip" />
                <TextView
                    android:id="@+id/deMotor"
                    android:background="@color/colorPrimaryText"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:padding="8dip" />
                <TextView
                    android:id="@+id/deTotal"
                    android:background="@color/colorPrimaryText"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:padding="8dip" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/deJenis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Bayar Sekali"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biaya parkir"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:stretchColumns="3"
            android:background="@color/colorPrimary">
            <TableRow>
                <TextView

                    android:gravity="center"
                    android:padding="8dip"
                    android:textSize="14dp"
                    android:background="@color/colorPrimaryText"/>
                <TextView
                    android:text="Mobil"
                    android:textColor="@color/colorPrimaryText"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:padding="8dip" />
                <TextView
                    android:text="Motor"
                    android:textColor="@color/colorPrimaryText"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:padding="8dip" />

            </TableRow>
            <TableRow>
                <TextView
                    android:text="Awal"
                    android:textColor="@color/colorPrimaryText"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:padding="8dip" />
                <TextView
                    android:id="@+id/deBMotor"
                    android:background="@color/colorPrimaryText"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:padding="8dip" />
                <TextView
                    android:id="@+id/deBMobil"
                    android:background="@color/colorPrimaryText"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:padding="8dip" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Berikutnya"
                    android:textColor="@color/colorPrimaryText"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:padding="8dip" />
                <TextView
                    android:id="@+id/deBMotorT"
                    android:background="@color/colorPrimaryText"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:padding="8dip" />
                <TextView
                    android:id="@+id/deBMobilT"
                    android:background="@color/colorPrimaryText"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:padding="8dip" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Maximal"
                    android:textColor="@color/colorPrimaryText"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:padding="8dip" />
                <TextView
                    android:id="@+id/deMaxMt"
                    android:background="@color/colorPrimaryText"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:padding="8dip" />
                <TextView
                    android:id="@+id/deMaxMb"
                    android:background="@color/colorPrimaryText"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:padding="8dip" />
            </TableRow>
        </TableLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:background="@color/colorPrimary">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/deKeterangan"
                android:textSize="14dp"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimaryText"/>

    </ScrollView>


</LinearLayout>
